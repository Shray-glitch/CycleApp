<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="50dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textSize="40sp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\n Tell us about your bicycle"
        android:layout_marginTop="-20dp"
        android:textSize="18dp"/>


    <EditText
        android:id="@+id/brand"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:background="@drawable/border"
        android:hint="Brand"
        android:paddingLeft="10sp"
        android:layout_height="40dp"
        android:inputType="textAutoComplete|textCapWords"
        android:textSize="20sp" />

    <EditText
        android:layout_width="match_parent"
        android:hint="Age of cycle in years"
        android:id="@+id/age"
        android:layout_height="40dp"
        android:paddingLeft="10sp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:background="@drawable/border"
        android:inputType="number"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30sp">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieCheck1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:lottie_rawRes="@raw/checkbox"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gears"
            android:textSize="25sp" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10sp">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieCheck2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:lottie_rawRes="@raw/checkbox"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bottle Holder"
            android:textSize="25sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10sp">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieCheck3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:lottie_rawRes="@raw/checkbox"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Headlight"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10sp">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieCheck4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:lottie_rawRes="@raw/checkbox"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mud Guard"
            android:textSize="25sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10sp">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieCheck5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:lottie_rawRes="@raw/checkbox"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bell"
            android:textSize="25sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10sp">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieCheck6"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:lottie_rawRes="@raw/checkbox"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Carrier"
            android:textSize="25sp" />
    </LinearLayout>

    <Button
        android:layout_marginTop="50sp"
        android:id="@+id/go_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GO"
        android:background="@drawable/signup_btn"
        android:textColor="#000" />









</LinearLayout>